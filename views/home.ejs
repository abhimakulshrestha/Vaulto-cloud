<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.0/fonts/remixicon.css" rel="stylesheet" />
  </head>
  <body>
    <main class="bg-gray-100 dark:bg-gray-800 min-h-screen w-screen flex flex-col py-8">
        <!-- Header with User Info and Logout -->
        <div class="w-full max-w-6xl px-6 mx-auto mb-6">
            <div class="flex justify-between items-center bg-white dark:bg-gray-700 rounded-lg shadow-md p-4">
                <div>
                    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-200">Vaulto</h1>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Welcome to your cloud storage</p>
                </div>
                <div class="flex items-center gap-4">
                    <div class="text-right">
                        <p class="text-sm font-medium text-gray-800 dark:text-gray-200">Logged in</p>
                    </div>
                    <a href="/logout" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">
                        <i class="ri-logout-box-line mr-1"></i> Logout
                    </a>
                </div>
            </div>
        </div>

        <div class="w-full max-w-6xl px-6 mx-auto">
            <!-- Upload Button -->
            <div class="flex justify-center mb-6">
                <button class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-8 py-3 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                    onclick="showPopUp()">
                    <i class="ri-upload-cloud-line mr-2"></i> Upload File
                </button>
            </div>
            
            <!-- Files List Container -->
            <div class="files-container bg-white dark:bg-gray-700 rounded-lg shadow-lg p-8 w-full">
                <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-6">My Files</h2>
                
                <div class="files flex flex-col gap-4">
                    <% if (files && files.length > 0) { %>
                        <% files.forEach((file) => { %>   
                        <div class="file-item p-4 rounded-md bg-gray-100 dark:bg-gray-600 shadow hover:shadow-md transition-shadow flex items-center justify-between" data-file-id="<%= file._id %>">
                            <h1 class="font-semibold text-gray-800 dark:text-gray-200"><%= file.originalname %></h1>
                            <div class="flex gap-4 items-center">
                                <a href="/view/<%= file._id %>" target="_blank" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 flex items-center gap-1" title="View <%= file.originalname %>">
                                    <i class="ri-eye-line text-xl"></i> 
                                </a>
                                <a href="/download/<%= file._id %>" target="_blank" class="text-green-600 dark:text-green-400 hover:text-green-800 dark:hover:text-green-300 flex items-center gap-1" title="Download <%= file.originalname %>">
                                    <i class="ri-download-cloud-2-line text-xl"></i>
                                </a>
                                <button onclick="deleteFile('<%= file._id %>', '<%= file.originalname %>')" class="text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 flex items-center gap-1" title="Delete <%= file.originalname %>">
                                    <i class="ri-delete-bin-line text-xl"></i>
                                </button>
                            </div>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <div class="text-center py-8">
                            <i class="ri-folder-open-line text-6xl text-gray-400 dark:text-gray-500 mb-4"></i>
                            <p class="text-gray-500 dark:text-gray-400 text-lg">No files uploaded yet.</p>
                            <p class="text-gray-400 dark:text-gray-500 text-sm mt-2">Click the "Upload File" button above to get started.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Upload Popup (Hidden by default) -->
        <div class="pop backdrop-blur fixed inset-0 hidden items-center justify-center p-4">
                <div class="w-full max-w-lg">
                    <form action="/upload" method="post" enctype="multipart/form-data" class="bg-white p-8 rounded-lg shadow-md dark:bg-gray-700">
                        <h3 class="text-xl font-bold text-gray-800 dark:text-gray-200 mb-4">Upload File</h3>
                        
                        <div class="flex items-center justify-center w-full">
                            
                            <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
                                <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                    <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
                                    </svg>
                                    <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Any file type supported</p>
                                </div>
                                <input id="dropzone-file" type="file" class="hidden" name="file" onchange="updateFileName(this)" />
                            </label>
                            
                        </div>
                        
                        <!-- Selected File Display -->
                        <div id="selected-file" class="mt-4 hidden">
                            <div class="flex items-center gap-2 p-3 bg-blue-50 dark:bg-blue-900 rounded-lg">
                                <i class="ri-file-line text-blue-600 dark:text-blue-400 text-xl"></i>
                                <span id="file-name" class="text-sm font-medium text-gray-800 dark:text-gray-200 flex-1 truncate"></span>
                                <button type="button" onclick="clearFile()" class="text-red-600 hover:text-red-800 dark:text-red-400">
                                    <i class="ri-close-line text-xl"></i>
                                </button>
                            </div>
                        </div>
                        
                        <button type="submit" class="mt-4 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            <i class="ri-upload-cloud-line mr-2"></i> Upload file
                        </button>
                    </form>
                    
                    <button class="mt-4 text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" onclick="hidePopUp()">
                        Close
                    </button>
                </div>
        </div>
            

    </main>

    <!-- Cookie Consent Banner -->
    <div id="cookie-consent" class="hidden fixed bottom-0 left-0 right-0 bg-gray-900 text-white p-4 shadow-lg z-50">
        <div class="max-w-6xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-4">
            <p class="text-sm">
                We use cookies to enhance your experience. By continuing to visit this site you agree to our use of cookies.
            </p>
            <button id="accept-cookies" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg text-sm font-medium whitespace-nowrap">
                Accept All Cookies
            </button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>

    
    <script>
        // Cookie Consent
        window.addEventListener('DOMContentLoaded', () => {
            const cookieConsent = document.getElementById('cookie-consent');
            const acceptButton = document.getElementById('accept-cookies');
            
            // Check if user has already accepted cookies
            if (!localStorage.getItem('cookiesAccepted')) {
                cookieConsent.classList.remove('hidden');
            }
            
            acceptButton.addEventListener('click', () => {
                localStorage.setItem('cookiesAccepted', 'true');
                cookieConsent.classList.add('hidden');
            });
        });

        function hidePopUp() {
            const popup = document.querySelector('.pop');
            if (popup) {
                popup.style.display = 'none';
                clearFile();
            }
        }
        function showPopUp() {
            const popup = document.querySelector('.pop');
            if (popup) {
                popup.style.display = 'flex';
            }
        }
        
        function updateFileName(input) {
            const selectedFileDiv = document.getElementById('selected-file');
            const fileNameSpan = document.getElementById('file-name');
            
            if (input.files && input.files[0]) {
                const fileName = input.files[0].name;
                fileNameSpan.textContent = fileName;
                selectedFileDiv.classList.remove('hidden');
            } else {
                selectedFileDiv.classList.add('hidden');
            }
        }
        
        function clearFile() {
            const fileInput = document.getElementById('dropzone-file');
            const selectedFileDiv = document.getElementById('selected-file');
            
            fileInput.value = '';
            selectedFileDiv.classList.add('hidden');
        }

        // Delete file function
        async function deleteFile(fileId, fileName) {
            // Show confirmation dialog
            const confirmed = confirm(`Are you sure you want to delete "${fileName}"?\n\nThis action cannot be undone.`);
            
            if (!confirmed) {
                return;
            }

            try {
                const response = await fetch(`/delete/${fileId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (response.ok) {
                    // Remove the file item from the DOM
                    const fileItem = document.querySelector(`[data-file-id="${fileId}"]`);
                    if (fileItem) {
                        // Add fade out animation
                        fileItem.style.transition = 'opacity 0.3s ease-out';
                        fileItem.style.opacity = '0';
                        
                        setTimeout(() => {
                            fileItem.remove();
                            
                            // Check if there are no more files and show empty state
                            const filesContainer = document.querySelector('.files');
                            const remainingFiles = filesContainer.querySelectorAll('.file-item');
                            
                            if (remainingFiles.length === 0) {
                                filesContainer.innerHTML = `
                                    <div class="text-center py-8">
                                        <i class="ri-folder-open-line text-6xl text-gray-400 dark:text-gray-500 mb-4"></i>
                                        <p class="text-gray-500 dark:text-gray-400 text-lg">No files uploaded yet.</p>
                                        <p class="text-gray-400 dark:text-gray-500 text-sm mt-2">Click the "Upload File" button above to get started.</p>
                                    </div>
                                `;
                            }
                        }, 300);
                    }

                    // Optional: Show success message
                    console.log('File deleted successfully:', fileName);
                } else {
                    alert(`Failed to delete file: ${data.error || 'Unknown error'}`);
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert('An error occurred while deleting the file. Please try again.');
            }
        }
    </script>
  </body>
</html>